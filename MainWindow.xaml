<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        Title="Game Launcher"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FF1E1E2F"/>
        <SolidColorBrush x:Key="PanelBackgroundColor" Color="#E61E1E2F"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="White"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#DDD"/>
        <SolidColorBrush x:Key="PlaceholderTextColor" Color="#AAA"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="AccentColorHover" Color="#5DBF60"/>
        <SolidColorBrush x:Key="AccentColorPressed" Color="#449D48"/>
        <SolidColorBrush x:Key="LinkColor" Color="#4FC3F7"/>
        <SolidColorBrush x:Key="InputBorderColor" Color="#22FFFFFF"/>
        <SolidColorBrush x:Key="CloseButtonHoverColor" Color="#E81123"/>
        <Style x:Key="InputBoxBaseStyle" TargetType="Control">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="34,10,12,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="TextBoxWithIconStyle" TargetType="TextBox" BasedOn="{StaticResource InputBoxBaseStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" Background="{StaticResource InputBorderColor}">
                            <Grid>
                                <TextBlock Text="{TemplateBinding Tag}" Foreground="{StaticResource PlaceholderTextColor}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="{TemplateBinding Padding}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style></TextBlock>
                                <Path Fill="{StaticResource PlaceholderTextColor}" Width="16" Height="16" Stretch="Uniform" HorizontalAlignment="Left" Margin="12,0,0,0" Data="M16 7C16 9.20914 14.2091 11 12 11C9.79086 11 8 9.20914 8 7C8 4.79086 9.79086 3 12 3C14.2091 3 16 4.79086 16 7ZM12 14C8.13401 14 5 17.134 5 21H19C19 17.134 15.866 14 12 14Z"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" Margin="2,0,0,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PasswordBoxWithIconStyle" TargetType="PasswordBox" BasedOn="{StaticResource InputBoxBaseStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5" Background="{StaticResource InputBorderColor}">
                            <Grid>
                                <TextBlock x:Name="PlaceholderText" Text="{TemplateBinding Tag}" Foreground="{StaticResource PlaceholderTextColor}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" Visibility="Visible"/>
                                <Path Fill="{StaticResource PlaceholderTextColor}" Width="16" Height="16" Stretch="Uniform" HorizontalAlignment="Left" Margin="12,0,0,0" Data="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" Margin="2,0,0,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColorHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColorPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HyperlinkTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LinkColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CloseButtonHoverColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <ImageBrush ImageSource="Assets/wallpaper.jpg" Stretch="UniformToFill"/>
        </Border.Background>

        <Grid>
            <Grid Background="#E61E1E2F" Width="350" HorizontalAlignment="Left">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="2" Opacity="0.5"/>
                </Grid.Effect>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="30" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/sentinel-logo.png" Height="80" Margin="0,0,0,30"/>
                    <TextBlock Text="Welcome Back" FontSize="16" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,0,30" TextAlignment="Center"/>
                    <TextBox x:Name="UsernameBox" Style="{StaticResource TextBoxWithIconStyle}" Tag="Enter your Username" Margin="0,0,0,15"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxWithIconStyle}" Tag="Enter your Password" Margin="0,0,0,15" PasswordChanged="PasswordBox_PasswordChanged" Loaded="PasswordBox_Loaded"/>
                    <Grid Margin="0,5,0,0">
                        <CheckBox x:Name="RememberMeCheckBox" Content="Remember me" Foreground="{StaticResource SecondaryTextColor}" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="ForgotPasswordLink" Text="Forgot Password?" Style="{StaticResource HyperlinkTextStyle}" MouseDown="ForgotPasswordLink_MouseDown"/>
                    </Grid>

                    <Button x:Name="LoginButton" Style="{StaticResource PrimaryButtonStyle}" Margin="0,25,0,0" Click="LoginButton_Click" IsDefault="True">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="20" Height="20" Margin="0,0,8,0" VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M16.5 3.75a1.5 1.5 0 0 1 1.5 1.5v13.5a1.5 1.5 0 0 1-1.5 1.5h-6a1.5 1.5 0 0 1-1.5-1.5V15a.75.75 0 0 0-1.5 0v3.75a3 3 0 0 0 3 3h6a3 3 0 0 0 3-3V5.25a3 3 0 0 0-3-3h-6a3 3 0 0 0-3 3V9A.75.75 0 1 0 9 9V5.25a1.5 1.5 0 0 1 1.5-1.5h6Zm-5.03 4.72a.75.75 0 0 0 0 1.06l1.72 1.72H2.25a.75.75 0 0 0 0 1.5h10.94l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3a.75.75 0 0 0 0-1.06l-3-3a.75.75 0 0 0-1.06 0Z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Login" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!--== DISCORD BUTTON ==-->
                    <Button x:Name="DiscordButton" Margin="0,10,0,0" Height="35" Click="DiscordButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#37353E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#44444E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <Path Fill="White" Stretch="Uniform" Width="20" Margin="0,0,8,0"
      Data="M13.545 2.907a13.2 13.2 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.2 12.2 0 0 0-3.658 0 8 8 0 0 0-.412-.833.05.05 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.04.04 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032q.003.022.021.037a13.3 13.3 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019q.463-.63.818-1.329a.05.05 0 0 0-.01-.059l-.018-.011a9 9 0 0 1-1.248-.595.05.05 0 0 1-.02-.066l.015-.019q.127-.095.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.05.05 0 0 1 .053.007q.121.1.248.195a.05.05 0 0 1-.004.085 8 8 0 0 1-1.249.594.05.05 0 0 0-.03.03.05.05 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.2 13.2 0 0 0 4.001-2.02.05.05 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.03.03 0 0 0-.02-.019M5.347 9.724c-.789 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612m5.316 0c-.788 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612"/>
                            <TextBlock Text="Join Discord" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="© 2025 Sentinel Project. All rights reserved."
                           Foreground="{StaticResource SecondaryTextColor}"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
            </Grid>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal">
                <Button Content="&#xE921;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>